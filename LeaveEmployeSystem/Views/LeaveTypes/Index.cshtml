@model IEnumerable<LeaveEmployeSystem.Models.ViewModel.LeaveTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>

<p>
    <a asp-action="Create" class="btn btn-success "><i class="fa fa-plus"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <a class="btn btn-warning text-white " asp-action="Edit" asp-route-id="@item.Id"> <i class="fa fa-pencil"></i> </a>
                    <a class="btn btn-primary " asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info-circle"></i> </a>
                    <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>
