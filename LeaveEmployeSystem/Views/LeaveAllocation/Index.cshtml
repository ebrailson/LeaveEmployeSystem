@model LeaveEmployeSystem.Models.ViewModel.CreateLeaveAllocationTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveType)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    <a class="btn btn-outline-success" asp-controller="LeaveAllocation" asp-action="AllocateLeave" asp-route-id="@item.Id">
                        <i class="fa fa-pencil"></i> Allocate to Employees
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
