@model LeaveEmployeSystem.Models.ViewModel.CreateLeaveRequestViewModel

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<hr />
<h2>Leave Type</h2>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                @Html.DropDownListFor(l => l.LeaveTypeId, new SelectList(Model.LeaveTypes, "Value", "Text"), "Select Leave Type", new { @class = "form-control" })
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>

            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control datepicker" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label "></label>
                        <input asp-for="EndDate" class="form-control datepicker" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="RequestsComment" class="control-label"></label>
                        <textarea asp-for="RequestsComment" class="form-control"></textarea>
                        <span asp-validation-for="RequestsComment" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="RequestLeave" class="btn btn-primary btn-block" />
                <a class="btn btn-outline-dark btn-block" asp-action="MyLeave" asp-controller="LeaveRequested">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>
